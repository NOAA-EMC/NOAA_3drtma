    &COMMONVARS;
    <envar>
      <name>rundir_task</name>
      <value><cyclestr>&DATAROOT;/@Y@m@d@H/obsprd</cyclestr></value>
    </envar>
    <envar>
      <name>NSSL</name>
      <value>&RADAR_DIR;</value>
    </envar>

    <dependency>
      <or>
        <timedep><cyclestr offset="&START_TIME_RADAR;">@Y@m@d@H@M00</cyclestr></timedep>
        <rb><cyclestr offset="-0:01:00">!Dir.glob('&RADAR_DIR;/@Y@m@d-@H@M*.MRMS_EXP_MergedReflectivityQC_00.50_@Y@m@d-@H*.grib2').empty?</cyclestr></rb>
